<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfileActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/my_profile"
            android:id="@+id/imgProfile"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/label_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/imgProfile"
            app:layout_constraintStart_toStartOf="@+id/imgProfile"/>
    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvName" android:layout_marginTop="8dp">

    </FrameLayout>
    <TextView
            android:text="@string/label_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTrack"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/label_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTrackName"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/tvTrack"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTrack"
            app:layout_constraintTop_toTopOf="@+id/tvTrack"/>
    <TextView
            android:text="@string/label_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountry"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tvTrack"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/label_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/tvCountryName"
            app:layout_constraintBottom_toBottomOf="@+id/tvCountry"
            app:layout_constraintTop_toTopOf="@+id/tvCountry"
            app:layout_constraintStart_toEndOf="@+id/tvCountry"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tvCountry"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/label_email_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmailName"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_email"
            app:layout_constraintTop_toTopOf="@+id/tv_email"
            app:layout_constraintStart_toEndOf="@+id/tv_email"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/label_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPhoneNumber"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/label_user_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserPhoneNumber"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhoneNumber"
            app:layout_constraintTop_toTopOf="@+id/tvPhoneNumber"
            app:layout_constraintStart_toEndOf="@+id/tvPhoneNumber"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/label_slack_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSlackUserNAme"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSlackName"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSlackUserNAme"
            app:layout_constraintTop_toTopOf="@+id/tvSlackUserNAme"
            app:layout_constraintStart_toEndOf="@+id/tvSlackUserNAme"
            android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>